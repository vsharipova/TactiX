@model TactiX.Models.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>TactiX — Восстановление пароля</title>
    <link rel="stylesheet" href="~/css/auth.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="auth-background"></div>
    <div class="auth-container">
        <div class="logo-container">
            <i class="fas fa-bullseye logo-icon"></i>
            <h1>Tacti<span>X</span></h1>
            <p>Восстановление пароля</p>
        </div>

        <div class="form-container">
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="input-group">
                    <input asp-for="Email" class="form-control" required>
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <input asp-for="NewPassword" type="password" class="form-control" required>
                    <label asp-for="NewPassword">Новый пароль</label>
                    <span class="toggle-password" onclick="togglePassword('NewPassword')">
                        <i class="fas fa-eye"></i>
                    </span>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                    <label asp-for="ConfirmPassword">Подтвердите пароль</label>
                    <span class="toggle-password" onclick="togglePassword('ConfirmPassword')">
                        <i class="fas fa-eye"></i>
                    </span>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-shoot">Изменить пароль</button>

                <div class="auth-footer">
                    <a asp-action="Login">Вернуться к входу</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        function togglePassword(fieldId) {
            const input = document.getElementById(fieldId);
            const icon = input.nextElementSibling.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }
    </script>
</body>
</html>